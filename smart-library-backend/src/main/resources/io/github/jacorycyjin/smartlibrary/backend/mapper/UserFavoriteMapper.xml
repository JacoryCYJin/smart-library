<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.jacorycyjin.smartlibrary.backend.mapper.UserFavoriteMapper">

    <!-- 结果映射 -->
    <resultMap id="UserFavoriteResultMap" type="io.github.jacorycyjin.smartlibrary.backend.entity.UserFavorite">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="resource_id" property="resourceId"/>
        <result column="ctime" property="ctime"/>
    </resultMap>

    <!-- 添加收藏 -->
    <insert id="insertFavorite" parameterType="io.github.jacorycyjin.smartlibrary.backend.entity.UserFavorite">
        INSERT INTO user_favorite (user_id, resource_id, ctime)
        VALUES (#{userId}, #{resourceId}, #{ctime})
    </insert>

    <!-- 取消收藏（物理删除） -->
    <delete id="deleteFavorite">
        DELETE FROM user_favorite
        WHERE user_id = #{userId} AND resource_id = #{resourceId}
    </delete>

    <!-- 检查是否已收藏 -->
    <select id="checkFavorite" resultType="int">
        SELECT COUNT(*)
        FROM user_favorite
        WHERE user_id = #{userId} AND resource_id = #{resourceId}
    </select>

    <!-- 查询用户收藏列表 -->
    <select id="selectFavoritesByUserId" parameterType="map" resultMap="UserFavoriteResultMap">
        SELECT id, user_id, resource_id, ctime
        FROM user_favorite
        WHERE user_id = #{userId}
        ORDER BY ctime DESC
        <if test="limit != null and limit > 0">
            LIMIT #{limit}
            <if test="offset != null">
                OFFSET #{offset}
            </if>
        </if>
    </select>

    <!-- 统计用户收藏数量 -->
    <select id="countFavoritesByUserId" resultType="int">
        SELECT COUNT(*)
        FROM user_favorite
        WHERE user_id = #{userId}
    </select>

</mapper>
